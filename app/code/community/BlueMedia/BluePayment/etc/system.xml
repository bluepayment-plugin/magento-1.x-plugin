<?xml version="1.0"?>
<config>
    <sections>
        <payment>
            <groups>
                <bluepayment translate="label" module="bluepayment">
                    <label>Online payment BM</label>
                    <sort_order>670</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <checkout_gateways_active translate="label">
                            <label>Checkout Gateway Selection Active</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </checkout_gateways_active>
                        <show_gateway_logo translate="label">
                            <label>Show Gateway Logo</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_gateway_logo>
                        <test_mode translate="label">
                            <label>Test mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </test_mode>
                        <service_id translate="label">
                            <label>Service partner ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <tooltip>Indetyfikator sklepu zawiera tylko cyfry np. 12345</tooltip>
                        </service_id>
                        <shared_key translate="label">
                            <label>Shared key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <tooltip>Kod alfanumeryczny</tooltip>
                        </shared_key>
                        <status_waiting_payment translate="label">
                            <label>Status waiting payment</label>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </status_waiting_payment>
                        <status_accept_payment translate="label">
                            <label>Status accept payment</label>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </status_accept_payment>
                        <status_error_payment translate="label">
                            <label>Status error payment</label>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </status_error_payment>
                        <addjquery translate="label">
                            <label>Dodaj jQuery do procesu zamówienia</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <tooltip>W wiekszość sklepów opcja powinna być wyłączona.</tooltip>
                        </addjquery>
                        <iframe_payment translate="label">
                            <label>Iframe Payment</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <tooltip>Płatność w iFrame bez opuszczenie strony sklepu. Dotyczy płatności kartą oraz płatności automatycznych.</tooltip>
                        </iframe_payment>
                        <auto_payments translate="label">
                            <label>Automatic payments</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <tooltip>Przed uruchomieniem tej opcji skontaktuje się z Blue Media.
                                Wymagane włączenie opcji "Wybór kanałów płatności w sklepie"</tooltip>
                        </auto_payments>
                        <info_text translate="label">
                            <label>Opis płatności</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <tooltip>Treść widoczna w procesie zamiawiania po wybraniu płatności BM.</tooltip>
                        </info_text>
                    </fields>
                </bluepayment>
            </groups>
        </payment>
    </sections>
</config>
